{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "types": ["@testing-library/jest-dom"],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true
  },
  "include": ["src"]
}
